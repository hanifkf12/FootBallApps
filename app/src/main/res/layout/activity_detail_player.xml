<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Detail.DetailPlayerActivity">
    
    <LinearLayout android:layout_width="match_parent" 
                  android:layout_height="match_parent"
                  android:orientation="vertical"
    ><ProgressBar android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:indeterminateTint="@color/colorPrimary"
                  android:id="@+id/progressPlayer"
                  android:visibility="gone"
    />
        <ImageView android:layout_width="match_parent" android:layout_height="wrap_content"
                   android:id="@+id/baner"


        />

            <ImageView android:layout_width="60dp" android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:layout_marginTop="10dp"
                       android:id="@+id/pht_player"
            />

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:textSize="22sp"
                  android:text="Forward"
                  android:textColor="@color/colorPrimaryDark"
                  android:id="@+id/player_position"
        />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:textSize="18sp"
                  android:text="Player"
                  android:id="@+id/player_weight"
        />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:textSize="18sp"
                  android:text="Player"
                  android:id="@+id/player_height"
        />
        <android.support.v7.widget.CardView android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="3dp"
                                            app:cardElevation="8dp"
        >
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:padding="10dp"
                      android:id="@+id/player_desc"
            />
        </android.support.v7.widget.CardView>

        
    </LinearLayout>


</ScrollView>